<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.sist.notice.dao.mainData">
	
	<select id="noticeView" resultType="kr.co.sist.notice.domain.NoticeData" >
		
		SELECT NUM, TITLE, HIREDATE
		FROM NOTICE
		ORDER BY ROWNUM DESC
	</select>   
	
	<select id="noticeDetailView" parameterType="String" resultType="kr.co.sist.notice.domain.NoticeData"  >
		
		SELECT NUM, TITLE, HIREDATE, CONTENT
		FROM NOTICE
		WHERE NUM = #{num} 
		
	</select>
	
	
</mapper>
